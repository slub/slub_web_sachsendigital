{
  "name": "slub-web-sachsendigital",
  "version": "1.0.0",
  "description": "This TYPO3 extension provides the configuration and setup for the new implementation of SACHSEN.digital",
  "scripts": {
    "watch": "webpack watch --mode=development",
    "build": "webpack --mode=production",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/slub/slub_web_sachsendigital"
  },
  "author": "Thomas Jung",
  "license": "WTFPL",
  "homepage": "https://sachsen.digital",
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "@types/jest": "^27.0.1",
    "@types/jquery": "^3.5.6",
    "babel-jest": "^27.2.1",
    "canvas": "^2.8.0",
    "css-loader": "^6.2.0",
    "css-minimizer-webpack-plugin": "^3.0.2",
    "jest": "^27.2.0",
    "jest-canvas-mock": "^2.3.1",
    "less": "^3.13.1",
    "less-loader": "^10.0.1",
    "mini-css-extract-plugin": "^2.3.0",
    "webpack": "^5.52.1",
    "webpack-cli": "^4.8.0",
    "webpack-remove-empty-scripts": "^0.7.1"
  },
  "dependencies": {
    "jquery": "3.5.1",
    "magnific-popup": "1.1.0",
    "shaka-player": "3.0.6"
  },
  "jest": {
    "rootDir": "..",
    "roots": [
      "<rootDir>/Resources/Private/JavaScript"
    ],
    "modulePaths": [
      "<rootDir>/Build/node_modules"
    ],
    "setupFiles": [
      "<rootDir>/Build/node_modules/jest-canvas-mock"
    ],
    "collectCoverageFrom": [
      "Resources/Private/JavaScript/**/*.js"
    ],
    "coverageDirectory": "Build/coverage",
    "coverageProvider": "v8"
  }
}
